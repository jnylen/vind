  <%= render Main.SharedView, "_subheader.html", title: "Translated countries", new_link: "/country/new" %>

  <table class="table">
    <thead class="bg-indigo-900 text-white">
      <tr>
        <th scope="col">Type</th>
        <th scope="col">Original</th>
        <th scope="col">ISO Code</th>
        <th scope="col">ACTIONS</th>
      </tr>
    </thead>
    <tbody>
      <%= for rule <- @rules do %>
      <tr>
        <td><%= rule.type %></td>
        <td><%= rule.original %></td>
        <td><%= rule.iso_code %></td>
        <td class="flex justify-between">
          <a class="font-bold" href="/country/edit/<%= rule.id %>">EDIT</a>
          <a class="font-bold" href="/country/delete/<%= rule.id %>">DELETE</a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= if @rules.total_entries > 0, do: pagination_links(@rules, search: Map.get(@conn.params, "search", %{})) %>
